@model IEnumerable<RecodeViagens.Models.Travel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.promo_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tickets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.id_customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transit.id_transit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.promo_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_travel">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_travel">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_travel">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
