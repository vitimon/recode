@model IEnumerable<RecodeViagens.Models.Transit>

@{
    ViewData["Title"] = "Trajetos";
}

<h1>Cadastro de Trajetos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_transit" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id_transit" class="btn btn-secondary">INFO</a> |
                <a asp-action="Delete" asp-route-id="@item.id_transit" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
